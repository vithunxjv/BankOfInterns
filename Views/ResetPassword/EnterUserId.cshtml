@model BOI.Models.EnterUserId

@{
    ViewBag.Title = "EnterUserId";
}

@Styles.Render("~/Content/csuid") 


@using (Html.BeginForm("VerifyOtp", "ResetPassword" ,FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h3>Enter your UserId</h3>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group-2">
        <label class="error">@Html.DisplayFor(model => model.UserIdErrorMsg)</label>
    </div>

    <div class="form-group-1">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

